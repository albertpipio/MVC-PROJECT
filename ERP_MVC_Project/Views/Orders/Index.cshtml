@model IEnumerable<Order>
@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Order List</h2>
		</div>
        <div class="col-6 text-end">
            <a asp-controller="Orders" asp-action="Create" class="btn btn-success">
               <i class="bi bi-plus-circle"></i> &nbsp; Create New Order
			</a>
		</div>
	</div>
    <br /><br />

<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                Id
			</th>
            <th>
                Status
			</th>
            <th>
                Priority
			</th>
            <th>
                Client
			</th>
            <th>
                Employee
			</th>
            <th>
                Date of Creation
			</th>
            <th>
                Date of Assignment
			</th>
            <th>
                Date of Completion
			</th>
            <th>
                Address
			</th>
            <th>
                Price
			</th>
            <th>
                
            </th>
		</tr>
	</thead>
    <tbody>
        @foreach(var obj in Model)
        {
            <tr>
                <td width="50%">
                    @obj.Id
				</td>
                <td width="30%">
                    @obj.Status
				</td>
                <td width="30%">
                    @obj.Priority
				</td>
                <td width="30%">
                    @obj.Client
				</td>
                <td width="30%">
                    @obj.Employee
				</td>
                <td width="30%">
                    @obj.DateOfCreation
				</td>
                <td width="30%">
                    @obj.DateOfAssignment
				</td>
                <td width="30%">
                    @obj.DateOfCompletion
				</td>
                <td width="30%">
                    @obj.Address
				</td>
                <td width="30%">
                    @obj.Price
				</td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="Orders" asp-action="Edit" asp-route-id="@obj.Id"
                        class="btn btn-warning mx-2"> <i class="bi bi-pencil-square"></i></a>
                        <a asp-controller="Orders" asp-action="Delete" asp-route-id="@obj.Id"
                        class="btn btn-danger mx-2"> <i class="bi bi-trash-fill"></i></a>
					</div>
				</td>
			</tr>
        }
    </tbody>
</table>
