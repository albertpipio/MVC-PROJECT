@model IEnumerable<Employee>
@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Employee List</h2>
		</div>
        <div class="col-6 text-end">
            <a asp-controller="Employees" asp-action="Create" class="btn btn-success">
               <i class="bi bi-plus-circle"></i> &nbsp; Create New Employee
			</a>
		</div>
	</div>
    <br /><br />

<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                Id
			</th>
            <th>
                Name
			</th>
            <th>
                Surname
			</th>
            <th>
                Email
			</th>
            <th>
                Past Orders
			</th>
            <th>
                Completed Orders
			</th>
            <th>
                Salary
			</th>
            <th>
                
            </th>
		</tr>
	</thead>
    <tbody>
        @foreach(var obj in Model)
        {
            <tr>
                <td width="50%">
                    @obj.Id
				</td>
                <td width="30%">
                    @obj.Name
				</td>
                <td width="30%">
                    @obj.Surname
				</td>
                <td width="30%">
                    @obj.Email
				</td>
                <td width="30%">
                    @obj.PastOrders
				</td>
                <td width="30%">
                    @obj.CompletedOrders
				</td>
                <td width="30%">
                    @obj.Salary
				</td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="Employees" asp-action="Edit" asp-route-id="@obj.Id"
                        class="btn btn-warning mx-2"> <i class="bi bi-pencil-square"></i></a>
                        <a asp-controller="Employees" asp-action="Delete" asp-route-id="@obj.Id"
                        class="btn btn-danger mx-2"> <i class="bi bi-trash-fill"></i></a>
					</div>
				</td>
			</tr>
        }
    </tbody>
</table>
